@page "/editproject"
@page "/editproject/{id:int}"

@inherits EditProjectBase
@attribute [Authorize(Roles = "Global Admin, User Admin")]

@if (ProjectInfo == null)
{
    <p>Loading...</p>
}
else
{
    <EditForm Model="ProjectInfo" OnValidSubmit="SubmitProject">
        <FluentValidationValidator />
        <div class="card text-center mx-auto" style="width:28rem">
            <div class="card-title text-center bg-info">
                <h2>@Title</h2>
            </div>
            <div class="card-body">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label text-right">Project Name</label>
                    <div class="col-md-8">
                        <InputText @bind-Value="ProjectInfo.Name" class="form-control"></InputText>
                        <ValidationMessage For="() => ProjectInfo.Name"></ValidationMessage>
                    </div>
                </div>
                <div clss="row">
                    <button type="submit" class="btn btn-outline-success">@ButtonText</button>
                </div>
            </div>
        </div>
    </EditForm>
}