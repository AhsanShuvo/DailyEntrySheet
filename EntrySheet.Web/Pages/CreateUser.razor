@page "/createuser"
@page "/createuser/{id}"

@inherits CreateUserBase

@if (UserInfo == null)
{
    <p>Loading.....</p>
}
else
{
    <EditForm Model="UserInfo" OnValidSubmit="SubmitUser">
    
        <div class="card text-center mx-auto" style="width:28rem">
            <div class="card-header">
                <h1 class="card-title">Create a new user</h1>
            </div>
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="card-body">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label text-right">Username</label>
                    <div class="col-md-5">
                        <InputText @bind-Value="UserInfo.UserName"></InputText>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label text-right">Password</label>
                    <div class="col-md-5">
                        <InputText type="password" @bind-Value="UserInfo.Password"></InputText>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label text-right">Role</label>
                    <div class="col-md-5 w-100 text-left">
                        <InputSelect @bind-Value="UserInfo.Role" clas="form-control">
                            @foreach (var role in Enum.GetValues(typeof(Role)))
                                {
                                <option>@role</option>
                                }
                        </InputSelect>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit">Submit</button>
            </div>
        </div>
    </EditForm>
}